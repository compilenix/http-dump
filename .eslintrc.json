{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"classes": true,
			"defaultParams": true,
			"arrowFunctions": true,
			"superInFunctions": true,
			"impliedStrict": true
		}
	},
	"rules": {
		"strict": "error",
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"off"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"ecmaFeatures": {
		"classes": true,
		"defaultParams": true,
		"arrowFunctions": true,
		"superInFunctions": true,
		"impliedStrict": true
	}
}
